<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackfsu.safecrumbs.alert_setup"
    android:background="@color/material_blue_grey_800">

    <TextView
        android:text="Alert Setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:textColor="@color/color6"
        android:layout_centerHorizontal="true"/>


    <TextView android:text="Current Status:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="@color/color6"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup1">

        <RadioButton android:id="@+id/uneasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uneasy"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/color4"/>
        <RadioButton android:id="@+id/unsafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsafe"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/color5"/>
        <RadioButton android:id="@+id/in_danger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Danger"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/color2"/>
    </RadioGroup>

    <TextView android:text="Notify contacts if I don't check in within:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tell_contact"
        android:textSize="20dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/color6"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tell_contact"
        android:id="@+id/radioGroup2">

        <RadioButton android:id="@+id/alert_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 Minutes"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/color8"/>

        <RadioButton android:id="@+id/alert_1hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An hour"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/color3"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Alert Mode"
        android:id="@+id/alert_mode_button"
        android:textSize="50dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:text="This will send a text to your contacts, with how you're feeling and to know to watch for another text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment"
        android:textSize="10dp"
        android:layout_below="@+id/alert_mode_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:id="@+id/go_back_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
