<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackfsu.safecrumbs.main_911">

    <TextView android:text="Home" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/safety_crumbs"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 - 1 - 1"
        android:id="@+id/callButton"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settings"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/alert_setup"
        android:layout_alignEnd="@+id/alert_setup" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Setup"
        android:id="@+id/alert_setup"
        android:textSize="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/callState"
        android:layout_below="@+id/callButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
