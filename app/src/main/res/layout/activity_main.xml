<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:text="to" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/to"
        android:layout_above="@+id/safety_crumbs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

    <TextView android:text="Safety Crumbs" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/safety_crumbs"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/welcome"
        android:layout_alignStart="@+id/welcome"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:id="@+id/enter"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
